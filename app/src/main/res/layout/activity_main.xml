<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.ben.atomkey.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="250dp">

            <HorizontalScrollView
                android:id="@+id/hScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <ScrollView
                    android:id="@+id/vScrollView"
                    android:layout_width="250dp"
                    android:layout_height="250dp">

                    <LinearLayout
                        android:id="@+id/keyboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/RowA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="8dp">

                            <Space
                                android:id="@+id/space_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/A1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="B" />

                            <TextView
                                android:id="@+id/A2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="K" />

                            <TextView
                                android:id="@+id/A3"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="D" />

                            <TextView
                                android:id="@+id/A4"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="G" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/RowB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:id="@+id/space_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/B1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="C" />

                            <TextView
                                android:id="@+id/B2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="A" />

                            <TextView
                                android:id="@+id/B3"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="N" />

                            <TextView
                                android:id="@+id/B4"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="I" />

                            <TextView
                                android:id="@+id/B5"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="M" />

                            <TextView
                                android:id="@+id/B6"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Q" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/RowC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:id="@+id/space_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/C1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="F" />

                            <TextView
                                android:id="@+id/C2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="L" />

                            <TextView
                                android:id="@+id/C3"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="E" />

                            <TextView
                                android:id="@+id/C4"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="SPC" />

                            <TextView
                                android:id="@+id/C5"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="S" />

                            <TextView
                                android:id="@+id/C6"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Y" />

                            <TextView
                                android:id="@+id/C7"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="X" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/RowD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:id="@+id/space_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/D1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="J" />

                            <TextView
                                android:id="@+id/D2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="H" />

                            <TextView
                                android:id="@+id/D3"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="T" />

                            <TextView
                                android:id="@+id/D4"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="O" />

                            <TextView
                                android:id="@+id/D5"
                                android:layout_width="75dp"
